<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="0.0" style="-fx-background-color: #fdfce8; -fx-border-color: #dbb6ee; -fx-border-width: 1;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chessn.controllers.GameModeDialogController">
    <children>
        <HBox fx:id="titleBar" alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #fff0ff; -fx-padding: 5 10 6 10;">
            <children>
                <Text text="New Game" style="-fx-font-family: 'DynaPuff'; -fx-font-size: 18; -fx-fill: #864626;" />
                <HBox HBox.hgrow="ALWAYS" />
                <Button fx:id="closeButton" text="Ã—" onAction="#handleClose" style="-fx-background-color: #dbb6ee; -fx-text-fill: #734128; -fx-font-size: 18; -fx-cursor: hand; -fx-background-radius: 5; -fx-padding: 0 8 0 8;" />
            </children>
        </HBox>
        <VBox alignment="CENTER" spacing="20.0">
            <children>
                <Text text="Choose Game Mode:" style="-fx-font-family: 'DynaPuff'; -fx-font-size: 20; -fx-fill: #864626;" />
                <Button fx:id="aiButton" text="Play vs. Computer" onAction="#handleAI" style="-fx-background-color: #dbb6ee; -fx-text-fill: #734128; -fx-font-size: 16; -fx-font-family: 'DynaPuff'; -fx-background-radius: 5; -fx-border-radius: 5; -fx-cursor: hand; -fx-padding: 10 30;" />
                <Button fx:id="passNPlayButton" text="Pass n Play" onAction="#handlePassNPlay" style="-fx-background-color: #dbb6ee; -fx-text-fill: #734128; -fx-font-size: 16; -fx-font-family: 'DynaPuff'; -fx-background-radius: 5; -fx-border-radius: 5; -fx-cursor: hand; -fx-padding: 10 30;" />
            </children>
            <padding>
                <Insets top="30.0" bottom="30.0" left="40.0" right="40.0" />
            </padding>
        </VBox>
    </children>
</VBox> 