<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<!-- 
CSS Classes used:
- player-row: Main container styling (lavender background, border)
- player-name: Player name text styling
- player-status: Status text styling
CSS file: /css/PlayerInfoPanel.css
-->

<HBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.chessn.controllers.PlayerInfoPanelBlackController"
      fx:id="blackPlayerRow"
      styleClass="player-row"
      stylesheets="@../css/PlayerInfoPanel.css"
      minHeight="36" prefHeight="36" maxHeight="36"
      alignment="CENTER_LEFT"
      style="-fx-padding: 0 0 4 10;">
    
    <Text fx:id="blackPlayerName" styleClass="player-name" text="Player 2 (Black)"/>
    <HBox minWidth="8" />
    <HBox fx:id="blackCapturedPiecesBox" spacing="4" alignment="CENTER_LEFT" minHeight="28" prefHeight="28" maxHeight="28" />
    <Region HBox.hgrow="ALWAYS"/>
    <Text fx:id="blackStatus" styleClass="player-status" text=""/>
    
</HBox> 